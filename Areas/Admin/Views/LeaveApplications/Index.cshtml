@model IEnumerable<StaffManagement.Models.LeaveApplication>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-4 ps-0 mb-4">
        <form asp-action="Create" method="get">
            <button type="submit" class="text-nowrap btn btn-block btn-outline-success btn-lg"><i class="fa fa-plus" aria-hidden="true"></i>  Add New Leave Application</button>
        </form>
    </div>
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Table</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Employee)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EndDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoOfDays)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Duration)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LeaveType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Attachment)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoOfDays)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Duration.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LeaveType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Attachment)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Status.Description)
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center align-items-center nowrap">
                                        <a class="btn btn-block btn-outline-primary btn-sm mt-2" asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i> Edit</a>
                                        <a class="btn btn-block btn-outline-info btn-sm " asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i> Details</a>
                                        <a class="btn btn-block btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i> Delete</a>
                                        <a class="btn btn-block btn-outline-primary btn-sm" asp-action="ApproveLeave" asp-route-id="@item.Id"><i class="fa fa-solid fa-check"></i> Approve</a>
                                        <a class="btn btn-block btn-outline-danger btn-sm" asp-action="RejectLeave" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i> Reject</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->